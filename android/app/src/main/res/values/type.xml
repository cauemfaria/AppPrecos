<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Typography System -->
    
    <!-- Display Styles -->
    <style name="TextAppearance.AppPrecos.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">64sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">52sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">44sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Headline Styles -->
    <style name="TextAppearance.AppPrecos.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">36sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Title Styles -->
    <style name="TextAppearance.AppPrecos.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Body Styles -->
    <style name="TextAppearance.AppPrecos.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.4</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Label Styles -->
    <style name="TextAppearance.AppPrecos.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.AppPrecos.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>

