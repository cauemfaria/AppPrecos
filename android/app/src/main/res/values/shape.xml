<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material 3 Shape System -->
    
    <!-- Shape Appearances - Extra Small -->
    <style name="ShapeAppearance.AppPrecos.ExtraSmall" parent="ShapeAppearance.Material3.Corner.ExtraSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <!-- Shape Appearances - Small -->
    <style name="ShapeAppearance.AppPrecos.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <!-- Shape Appearances - Medium -->
    <style name="ShapeAppearance.AppPrecos.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- Shape Appearances - Large -->
    <style name="ShapeAppearance.AppPrecos.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Shape Appearances - Extra Large -->
    <style name="ShapeAppearance.AppPrecos.ExtraLarge" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Shape Appearances - Full (for FAB, Chips, etc.) -->
    <style name="ShapeAppearance.AppPrecos.Full" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Top Rounded (for bottom sheets) -->
    <style name="ShapeAppearance.AppPrecos.LargeTopRounded" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>

