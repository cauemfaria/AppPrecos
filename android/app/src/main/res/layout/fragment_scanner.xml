<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/scanner_title"
                android:textAppearance="?attr/textAppearanceHeadlineLarge"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_xxl" />

            <!-- OR Divider -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scanner_or"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/textTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_xxxl" />

            <!-- URL Input with Material TextInputLayout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/scanner_manual_label"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_link"
                app:startIconTint="?attr/colorPrimary"
                app:endIconMode="clear_text"
                app:helperText="@string/scanner_url_hint"
                app:helperTextEnabled="true"
                app:helperTextTextAppearance="?attr/textAppearanceLabelSmall"
                app:boxStrokeWidth="2dp"
                app:boxStrokeWidthFocused="3dp"
                app:layout_constraintTop_toBottomOf="@id/textOr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_xl">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:maxLines="3"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubmitUrl"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_large"
                android:text="@string/scanner_submit"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:cornerRadius="@dimen/spacing_md"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_lg" />

            <!-- Progress Indicator (Material 3 Circular) -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminate="true"
                app:indicatorSize="48dp"
                app:layout_constraintTop_toBottomOf="@id/buttonSubmitUrl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_xl"
                tools:visibility="visible" />

            <!-- Status Text -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/scanner_status_idle"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/progressIndicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_lg"
                android:padding="@dimen/spacing_lg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Extended FAB for Scanning -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_lg"
        android:text="@string/scanner_scan_button"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textStyle="bold"
        android:contentDescription="@string/cd_scan_qr"
        app:icon="@drawable/ic_scan"
        app:elevation="@dimen/elevation_high"
        app:shapeAppearance="@style/ShapeAppearance.AppPrecos.Large"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

