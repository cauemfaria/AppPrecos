<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_sm"
    android:layout_marginEnd="@dimen/spacing_sm"
    android:layout_marginTop="@dimen/spacing_sm"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:contentDescription="@string/cd_market_card"
    style="?attr/materialCardViewElevatedStyle"
    app:cardElevation="@dimen/elevation_low"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Market Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textMarketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Supermercado Example" />

        <!-- Market Address -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textMarketAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="@dimen/spacing_xs"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Rua Example, 123, Bairro, Cidade - SP" />

        <!-- View Products Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/market_view_products"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            style="@style/Widget.Material3.Button.TonalButton"
            app:icon="@drawable/ic_storefront"
            app:iconGravity="textStart"
            app:cornerRadius="@dimen/spacing_sm"
            android:layout_marginTop="@dimen/spacing_md" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

