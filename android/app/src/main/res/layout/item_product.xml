<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_xs"
    android:layout_marginEnd="@dimen/spacing_xs"
    android:layout_marginTop="@dimen/spacing_xs"
    android:layout_marginBottom="@dimen/spacing_xs"
    android:contentDescription="@string/cd_product_card"
    style="?attr/materialCardViewFilledStyle"
    app:cardElevation="@dimen/elevation_none"
    app:cardCornerRadius="@dimen/spacing_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_lg"
        android:minHeight="@dimen/list_item_height_two_line">

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- NCM Code -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textProductNcm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="monospace"
                android:textStyle="bold"
                tools:text="NCM: 07099300" />

            <!-- Updated Date -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textProductUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="@dimen/spacing_xs"
                tools:text="Updated: 16/10/2025 05:54" />

        </LinearLayout>

        <!-- Price Badge -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_md"
            style="?attr/materialCardViewFilledStyle"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/spacing_sm">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm"
                tools:text="R$ 21,96" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

